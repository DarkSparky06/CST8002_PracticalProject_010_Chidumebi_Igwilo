// Data source attribution (Open Government Licence – Canada):
// Canadian Food Inspection Agency. (2023-05-12).
// 2013-14 Coumarin in dried beverage mixes, breads, baking mixes, spice mixes,
// dried tea, baked goods, and breakfast foods.
// open.canada.ca/data/en/dataset/c3675987-71ae-493c-b9be-c2222301ce4f

public class CoumarinRecord {
    private String region;
    private String function;
    private String origin;
    private String product;
    private String dateSampled;
    private String typeOfTest;
    private String component;
    private String result;
    private String unit;
    private String planCode;

    /**
     * Constructs a CoumarinRecord with all fields.
     */
    public CoumarinRecord(String region,
                           String function,
                           String origin,
                           String product,
                           String dateSampled,
                           String typeOfTest,
                           String component,
                           String result,
                           String unit,
                           String planCode) {
        this.region       = region;
        this.function     = function;
        this.origin       = origin;
        this.product      = product;
        this.dateSampled  = dateSampled;
        this.typeOfTest   = typeOfTest;
        this.component    = component;
        this.result       = result;
        this.unit         = unit;
        this.planCode     = planCode;
    }

    // Getters for each field
    public String getRegion()       { return region; }
    public String getFunction()     { return function; }
    public String getOrigin()       { return origin; }
    public String getProduct()      { return product; }
    public String getDateSampled()  { return dateSampled; }
    public String getTypeOfTest()   { return typeOfTest; }
    public String getComponent()    { return component; }
    public String getResult()       { return result; }
    public String getUnit()         { return unit; }
    public String getPlanCode()     { return planCode; }

    @Override
    public String toString() {
        return String.join(" | ",
            region, function, origin, product,
            dateSampled, typeOfTest, component,
            result, unit, planCode
        );
    }
}
